<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laba_3.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Profile.Property.Name.Property}"
                   Placeholder="Имя"/>
            <Entry Text="{Binding Profile.Property.Email.Property}"
                   IsReadOnly="True"
                   Placeholder="Email"/>
            <Entry Text="{Binding Profile.Property.Password.Property}"
                   IsReadOnly="True"
                   Placeholder="Пароль"/>
            <Button Text="Сохранить данные" Command="{Binding SaveProfileCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>